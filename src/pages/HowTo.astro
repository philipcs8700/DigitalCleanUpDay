---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import skraldespand from "../assets/images/Trash--Streamline-Atlas.svg";

const today = new Date();
const targetDate = new Date('2025-03-15');
const isAfterTargetDate = today >= targetDate;  // Tjek om vi er efter den 15. marts 2025

---


<MainLayout title="Digital Cleanup Day" class="">
    <!-- Hero Section -->
      <!-- Hero Section -->
<div class="relative z-20 flex flex-col items-center justify-center text-center text-white px-6 mb-12">
  <img src="src/assets/images/paperboy_white.svg" alt="paperboy" class="h-46 sm:h-40 md:h-46 w-auto mx-auto transition transform duration-300">
  <h1 class="text-5xl md:text-6xl font-bold leading-tight mb-6">
    Hvordan laver jeg en Digital Oprydning?
  </h1>
  <p class="text-xl md:text-2xl mb-8">
    {isAfterTargetDate 
        ? "Tillykke med at have bidraget! Tak for din indsats i oprydningen." 
        : "Gør en forskel! Inviter venner og familie til at deltage i oprydningen."}
  </p>
  <Button class="bg-pink-600 text-white py-3 px-8 rounded-full text-lg shadow-lg hover:bg-pink-700 transition duration-300">
    {isAfterTargetDate ? "Registrer Dit Bidrag" : "Save the Date"}
  </Button>
</div>

<!-- Boks-sektion med scrollytelling -->
<div class="min-h-screen flex items-center justify-center px-6 py-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full max-w-4xl">
    <!-- Boks 1 -->
    <div class="relative max-w-xl p-6 shadow-md rounded-lg scroll-animation opacity-0 translate-y-10">
      <div class="w-full mx-auto mt-8 px-4">
        <img src="src/assets/images/Smartphone--Streamline-Rounded-Material-Symbols.svg" 
             alt="Smartphone" 
             class="h-24 w-auto mx-auto transition transform hover:scale-125 duration-300">
      </div>
      <h2 class="text-3xl font-semibold text-center">Step 1</h2>
      <p class="mt-2 text-lg text-center">Rengør din smartphone</p>
    </div>

    <!-- Boks 2 -->
    <div class="relative max-w-xl p-6 shadow-md rounded-lg scroll-animation opacity-0 translate-y-10">
      <div class="w-full mx-auto mt-8 px-4">
        <img src="src/assets/images/Laptop-Chromebook--Streamline-Rounded-Material-Symbols.svg" 
             alt="Computer" 
             class="h-24 w-auto mx-auto transition transform hover:scale-125 duration-300">
      </div>
      <h2 class="text-3xl font-semibold text-center">Step 2</h2>
      <p class="mt-2 text-lg text-center">Ryd op på din computers hard drive</p>
    </div>

    <!-- Boks 3 -->
    <div class="relative max-w-xl p-6 shadow-md rounded-lg scroll-animation opacity-0 translate-y-10">
      <div class="w-full mx-auto mt-8 px-4">
        <img src="src/assets/images/Mail--Streamline-Rounded-Material-Symbols.svg" 
             alt="Mail" 
             class="h-24 w-auto mx-auto transition transform hover:scale-125 duration-300">
      </div>
      <h2 class="text-3xl font-semibold text-center">Step 3</h2>
      <p class="mt-2 text-lg text-center">Ryd op i din mail-indbakke</p>
    </div>

    <!-- Boks 4 -->
    <div class="relative max-w-xl p-6 shadow-md rounded-lg scroll-animation opacity-0 translate-y-10">
      <div class="w-full mx-auto mt-8 px-4">
        <img src="src/assets/images/Format-List-Numbered--Streamline-Rounded-Material-Symbols.svg" 
             alt="Arrangements" 
             class="h-24 w-auto mx-auto transition transform hover:scale-125 duration-300">
      </div>
      <h2 class="text-3xl font-semibold text-center">Step 4</h2>
      <p class="mt-2 text-lg text-center">Hav mere orden i dine ting</p>
    </div>
  </div>
</div>

<!-- Formular Sektion med scrollytelling -->
<div class="min-h-screen flex items-center justify-center px-6 py-8 text-black">
  <div class="max-w-xl w-full p-8 shadow-lg rounded-lg transform transition duration-700 opacity-0 scroll-animation">
    <section id="køb-her" class="max-w-lg mx-auto mt-32 p-6 rounded-lg shadow-xl">
      <h2 class="text-3xl sm:text-4xl font-bold pb-6 text-center text-white">Registrer dit bidrag</h2>
      <form class="space-y-4">
        <input type="text" placeholder="Navn" class="p-3 w-full border rounded-lg"/>
        <input type="text" placeholder="Adresse" class="p-3 w-full border rounded-lg"/>
        <input type="email" placeholder="E-mail" class="p-3 w-full border rounded-lg"/>
        <input type="text" placeholder="By" class="p-3 w-full border rounded-lg"/>
        <input type="text" placeholder="Postnummer" class="p-3 w-full border rounded-lg"/>
        <input type="tel" placeholder="Telefon" class="p-3 w-full border rounded-lg"/>
        <input type="text" placeholder="Kr." class="p-3 w-full border rounded-lg"/>
        <button type="submit" class="bg-sky-700 text-white py-3 px-6 rounded-full hover:bg-sky-900 transition w-full sm:w-auto cursor-pointer">
          Registrer
        </button>
      </form>
    </section>
  </div>
</div>

<!-- JavaScript til scrollytelling -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const elements = document.querySelectorAll('.scroll-animation');
    const observer = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Fjern startklasser og tilføj transitions
          entry.target.classList.remove('opacity-0', 'translate-y-10');
          entry.target.classList.add('opacity-100', 'translate-y-0', 'transition', 'duration-700');
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1
    });
    elements.forEach(el => observer.observe(el));
  });
</script>
